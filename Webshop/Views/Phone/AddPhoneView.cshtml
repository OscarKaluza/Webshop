@model Webshop.Models.PhoneModel;

<form method="post">
    <div class="form-group">
        <label for="brand">Merk:</label>
        <input type="text" id="brand" name="Brand" class="form-control" />
    </div>

    <div class="form-group">
        <label for="model">Model:</label>
        <input type="text" id="model" name="Model" class="form-control" />
    </div>

    <div class="form-group">
        <label for="price">Prijs:</label>
        <input type="number" id="price" name="Price" class="form-control" step="0.01" />
    </div>

    <div class="form-group">
        <label for="Description">Beschrijving:</label>
        <input type="Description" id="Description" name="Description" class="form-control" step="0.01" />
    </div>

    <button asp-controller="Phone" asp-action="Create" type="submit" class="btn btn-primary">Telefoon toevoegen</button>
</form>
