@model Webshop.Models.PhoneModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phone Webshop</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        h1 {
            margin: 0;
        }

        .brands {
            background-color: #fff;
            padding: 20px;
        }

            .brands ul {
                list-style: none;
                padding: 0;
                display: flex;
                flex-wrap: wrap;
                justify-content: 100;
            }

            .brands li {
                margin: 0;
                width: 30%;
                text-align: 100;
    </style>
</head>
<body>
    <div class="brands">
        <h2>Alle Telefoons</h2>
        <ul>
            @for (var i = 0; i < Model.phones.Count; i++)
            {
                <li>
                    <img src="https://static.vecteezy.com/system/resources/previews/011/047/522/non_2x/smartphone-and-mobile-phone-free-png.png" width="255" height="255">
                    <p style="display: none;">Brand: @Model.phones[i].ID</p>
                    <p>Merk: @Model.phones[i].Brand</p>
                    <p>Model: @Model.phones[i].Model</p>
                    <p> Prijs: @Model.phones[i].Price </p>
                    <p>Omschrijving: @Model.phones[i].Description</p>
                    <p style="display: none;">Quantity: @Model.Quantity</p>


                    <form asp-controller="Order" asp-action="Order" method="post">
                        <input type="hidden" name="ID" value="@Model.phones[i].ID" />
                        <input type="hidden" name="Brand" value="@Model.phones[i].Brand" />
                        <input type="hidden" name="Model" value="@Model.phones[i].Model" />
                        <input type="hidden" name="Price" value="@Model.phones[i].Price" />
                        <input type="hidden" name="Quantity" value="@Model.Quantity = 1" />
                        <button type="submit">Bestel</button>
                    </form>

                </li>
            }
        </ul>
    </div>
</body>
</html>
